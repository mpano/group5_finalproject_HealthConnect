@using HealthConnect_Utility
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor httpAcc

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HealthConnectWeb</title>
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/entypo.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/socicon.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HealthConnectWeb.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/8aa18c8793.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="navbar-container">
        <div class="bg-light navbar-light" data-sticky="top">
            <div class="container">
                <nav class="navbar navbar-expand-lg">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index" id="logo-text">HeathConnect</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="icon-menu h4"></i>
                    </button>
                    <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="" asp-action="">Doctor</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="" asp-action="">Appointment</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                             @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="" asp-action="">Find Runners</a>
                                </li>
                                
                            }else{

                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a asp-area="" asp-controller="Auth" asp-action="Register">Sign up</a>
                                    <span>&nbsp;or&nbsp;</span>
                                    <a asp-area="" asp-controller="Auth" asp-action="Login">Sign in</a>
                                </li>
                            </ul>
                            }
                    </div>
                    <!--end nav collapse-->
                </nav>
            </div>
            <!--end of container-->
        </div>
    </div>



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-gray text-light footer-long">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-3">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" id="logo-text">HealthConnect</a>
                    <p class="text-muted">
                        &copy; 2022 RunGroop
                        <br />
                        <br />
                    </p>
                </div>
                <!--end of col-->
                <div class="col-12 col-md-9">
                    <span class="h5">The world's first online platform for runners</span>
                    <div class="row no-gutters">
                        <div class="col-6 col-lg-3">
                            <h6>Navigate</h6>
                            <ul class="list-unstyled">
                                <li>
                                    <a asp-area="" asp-controller="Home"
                                       asp-action="Index">Home</a>
                                </li>
                                <li>
                                    <a asp-area="" asp-controller="Users"
                                       asp-action="Index">Find Runners Near You</a>
                                </li>
                                <li>
                                    <a asp-area="" asp-controller="Club"
                                       asp-action="Index">Find Running Clubs Near You</a>
                                </li>
                                <li>
                                    <a asp-area="" asp-controller="Race"
                                       asp-action="Index">Find Running Races Near You</a>
                                </li>
                            </ul>
                        </div>
                        <!--end of col-->
                        <div class="col-6 col-lg-3">
                            <h6>Club Directory</h6>
                            <ul class="list-unstyled">
                                <li>
                                    <a asp-area="" asp-controller="Club"
                                       asp-action="RunningClubsByStateDirectory">Find Running Clubs By State</a>
                                </li>
                                <li>
                                    <a asp-area="" asp-controller="Club"
                                       asp-action="RunningClubsByStateForCityDirectory">Find Running Clubs By City</a>
                                </li>
                            </ul>
                        </div>
                        <!--end of col-->
                        <div class="col-6 col-lg-3">
                            <h6>Race Directory</h6>
                            <ul class="list-unstyled">
                                <li>
                                    <a href="#">Find Running Races By City</a>
                                </li>
                                <li>
                                    <a href="#">Find Running Races By State</a>
                                </li>
                            </ul>
                        </div>
                        <!--end of col-->
                        <div class="col-6 col-lg-3">
                            <h6>Social</h6>
                            <ul class="list-unstyled">
                                <li>
                                    <a href="https://www.youtube.com/channel/UCU_Pr6r85LeSe62S65BLV2g">Youtube</a>
                                </li>
                                <li>
                                    <a href="https://www.facebook.com/RunGroop-101353239237822">Facebook</a>
                                </li>
                                <li>
                                    <a href="https://twitter.com/rungroop">Twitter</a>
                                </li>
                                <li>
                                    <a href="/blog">Blog</a>
                                </li>
                            </ul>
                        </div>
                        <!--end of col-->
                    </div>
                    <!--end of row-->
                </div>
                <!--end of col-->
            </div>
            <!--end of row-->
        </div>
        <!--end of container-->
    </footer>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/theme.js"></script>
    <script src="~/js/custom.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
